}

.form-wrapper {
    margin: 0 auto;
    width: 1000px;
    height: 500px;
}

.container,
.btns-div {
    margin: 0 auto;
    text-align: center;
}

input[type='radio'] {
    display: none;
}

.question {
    display: none;
}

.question:first-child {
    display: block;
}

.first-option {
    margin-top: 60px;
}

label,
.question-title {
    @include selection-style(20px 0, 20px);
    display: block;
}

label {
    box-shadow: 0px 0px 8px 1px lighten($primary-color, 10),
        0px 6px 0px 0px lighten($primary-color, 50);
    &:hover {
        background: $secondary-color;
        color: lighten($primary-color, 7);
        cursor: pointer;
    }
}

.question-title {
    line-height: 1.4;
    padding: 90px;
    box-shadow: 0px 0px 8px 1px lighten($primary-color, 5);
}

#change-my-mind,
#refresh {
    display: none;
    margin: 0;
}

.btns {
    @include selection-style(20px 0, 15px 20px);
    color: $primary-color;
    box-shadow: 0px 0px 8px 1px lighten($primary-color, 5);
    border: none;
    &:hover {
        background: $secondary-color;
        color: lighten($primary-color, 7);
    }
}

.btns-try-again {
    background: lighten($primary-color, 5);
    color: $tertiary-color;
    &:hover {
        background: lighten($primary-color, 25);
        color: $tertiary-color;
    }
}

